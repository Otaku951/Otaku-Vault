@model IEnumerable<OtakuVault.Models.MediaItem>

@{
    ViewData["Title"] = "Index";
}

<h1 class ="mb-4 text-center">🎬 Media Library</h1>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Title</th>
            <th>Type</th>
            <th>Genre</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var media in Model)
        {
            <tr>
                <td>@media.Title</td>
                <td>@media.Type</td>
                <td>@media.Genre</td>
                <td>
                    <a href="@media.ExternalLink" class="btn btn-sm btn-outline-primary" target="_blank">
                        @(media.Type == "Anime" ? "Watch" : "Read")
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>